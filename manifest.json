{
  "name": "ScryptoPass", 
  "version": "0.2",
  "manifest_version": 2,
  "description" : "Generate different passwords from single master password using cryptographically strong method (PBKDF2).",
  "icons": {
    "128": "icon_128.png",
    "64": "icon_64.png"
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "storage"
  ],
  "browser_action": {
      "default_title": "ScryptoPass",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "background": { "scripts": ["background.js"] },
  "content_security_policy": "default-src 'self'"
}

